<!-- BackboneCapabilitiesSection.razor -->
<MudPaper Elevation="0" Class="pa-3 mt-3" Style="border: 1px solid #e0e0e0; border-radius: 4px;">
    <MudText Typo="Typo.body2" Class="mb-2">
        <strong>Backbone Production Capabilities:</strong>
    </MudText>
    
    @foreach (var kvp in BackboneCapabilities)
    {
        var productName = kvp.Key;
        var capabilities = kvp.Value;
        
        <BackboneProductCapabilities 
            ProductName="@productName"
            Capabilities="@capabilities" />
    }
</MudPaper>

@code {
    [Parameter]
    public Dictionary<string, List<EquipmentCapabilityInfo>> BackboneCapabilities { get; set; } = new();
}