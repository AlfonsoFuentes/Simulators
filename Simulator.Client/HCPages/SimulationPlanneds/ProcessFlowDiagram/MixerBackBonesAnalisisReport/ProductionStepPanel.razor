<MudExpansionPanel Text="@($"{StepDetail.StepDescription} {StepDetail.StepType}")">
    <MudCardContent>
        <MudText><strong>Time:</strong> @StepDetail.Time.GetValue(TimeUnits.Minute).ToString("N2") @StepDetail.Time.Unit.Symbol</MudText>
        @if (StepDetail.Step.StepRawMaterial != null)
        {
            <MudText><strong>Material:</strong> @StepDetail.Step.StepRawMaterial.M_NumberCommonName</MudText>
        }
        <MudText><strong>Percentage:</strong> @StepDetail.Step.Percentage%</MudText>
    </MudCardContent>
</MudExpansionPanel>

@code {
    [Parameter] public StepTimeDetail StepDetail { get; set; } = new();
}