
<MudListItem T="string">
    <MudGrid Class="step-grid" Spacing="2">
        <MudItem xs="12" sm="4" md="3">
            <MudText Typo="Typo.body2" Class="text-truncate">
                @StepDetail.StepDescription
            </MudText>
        </MudItem>
        <MudItem xs="6" sm="1" md="2">
            <MudText Typo="Typo.body2" Align="Align.Center">@StepDetail.Step.Percentage%</MudText>
        </MudItem>
        <MudItem xs="6" sm="2" md="2">
            <MudText Typo="Typo.body2" Align="Align.Center">
                @if (StepDetail.Mass.Value == 0)
                {
                    <MudText Typo="Typo.body2" Align="Align.Center">—</MudText>
                }
                else
                {
                    @StepDetail.Mass.GetValue(MassUnits.KiloGram).ToString("N0")@MassUnits.KiloGram.Symbol
                }

            </MudText>
        </MudItem>
        <MudItem xs="6" sm="2" md="2">
            <MudText Typo="Typo.body2" Align="Align.Center">
                @if (StepDetail.PumpFlow.Value == 0)
                {
                    <MudText Typo="Typo.body2" Align="Align.Center">—</MudText>
                }
                else
                {
                    @StepDetail.PumpFlow.GetValue(MassFlowUnits.Kg_min).ToString("N0")@MassFlowUnits.Kg_min.Symbol
                }

            </MudText>
        </MudItem>
        <MudItem xs="6" sm="2" md="2">
            <MudText Typo="Typo.body2" Align="Align.Center">
                @StepDetail.Time.GetValue(TimeUnits.Minute).ToString("N1") @TimeUnits.Minute.Symbol
            </MudText>
        </MudItem>
        
       
        
    </MudGrid>
</MudListItem>

@code {
    [Parameter] public StepTimeDetail StepDetail { get; set; } = new();
}
