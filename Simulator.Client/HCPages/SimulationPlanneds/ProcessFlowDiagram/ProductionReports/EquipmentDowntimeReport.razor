<!-- EquipmentDowntimeReport.razor -->
<div class="pa-4">
    <MudPaper Elevation="1" Class="pa-4 mb-4">
        <MudText Typo="Typo.h4" Class="mb-4">Equipment Downtime Report</MudText>

        @if (Simulation != null && Simulation.GetAllEquipmentEvents().Any())
        {
            <!-- Summary Statistics -->
            <DowntimeSummary Simulation="@Simulation" />

            <!-- Detailed Downtime Report -->
            <DowntimeDetails Simulation="@Simulation" />
        }
        else
        {
            <MudPaper Elevation="2" Class="pa-8 text-center">
                <MudIcon Icon="@Icons.Material.Filled.Info" Size="Size.Large" Class="mb-4" />
                <MudText Typo="Typo.h6" Class="mb-2">No Downtime Events</MudText>
                <MudText Typo="Typo.body2" Color="Color.Secondary">
                    No equipment downtime events recorded.
                </MudText>
            </MudPaper>
        }
    </MudPaper>
</div>

@code {
    [Parameter]
    public NewSimulation Simulation { get; set; } = new();
}