@using Simulator.Shared.Simulations.Mixers
@using Simulator.Shared.Simulations.Tanks


<CardTank Tank="@Tank">
    <States>
        <LabelSimulation Label="Produced Batchs" Value="@Tank.BatchsProduced.ToString()"></LabelSimulation>
        <LabelSimulation Label="Total Outlet Shift" Value="@Tank.TotalMassOutletShift.ToString("G6")"></LabelSimulation>
        <LabelSimulation Label="Producing Mass" Value="@Tank.ProducingMass.ToString("G6")"></LabelSimulation>
        <LabelSimulation Label="Transfering to" Value="@Tank.SendingProduct.Name"></LabelSimulation>
        <LabelSimulation Label="Manufacturers Attached" ></LabelSimulation>
        @foreach (BaseMixer row in Tank.ManufacturingEquipments)
        {
            <CardMixerDataForTanks Mixer="@row"></CardMixerDataForTanks>
            <MudSpacer></MudSpacer>
        }


    </States>
</CardTank>


@code {

    [Parameter]

    public WIPForProductBackBone Tank { get; set; } = null!;


}
