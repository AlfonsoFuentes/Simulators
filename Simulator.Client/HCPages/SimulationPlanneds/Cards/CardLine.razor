@using Simulator.Shared.Simulations.Lines
<TemplateCard Title="@Line.Name">
    <Content>
       
        <LabelSimulation Label="Current SKU" Value="@Line.CurrentSkuName"></LabelSimulation>
        <LabelSimulation Label="Planned Cases" Value="@Line.PlannedCases.ToString("G6")"></LabelSimulation>
        <LabelSimulation Label="Planned Mass" Value="@Line.PlannedMass.ToString("G6")"></LabelSimulation>
        <LabelSimulation Label="Planned Shift" Value="@Line.ShiftManagement.ShiftType.ToString()"></LabelSimulation>
        <LabelSimulation Label="Current Shift" Value="@Line.ShiftManagement.CurrentShift.ToString()"></LabelSimulation>
        <LabelSimulation Label="Time to finish shift" Value="@Line.PendingTimeShift.ToString()"></LabelSimulation>
        <LabelSimulation Label="Next Shift Planned?" Value="@Line.IsNextShiftPlanned.ToString()"></LabelSimulation>
        <MudSpacer></MudSpacer>
        <LabelSimulation Label="Line State" Value="@Line.LabelLineState"></LabelSimulation>
        <LabelSimulation Label="Current Cases" Value="@Line.CurrentCases.ToString("G6")"></LabelSimulation>
        <LabelSimulation Label="Pending Mass" Value="@Line.PendingMass.ToString("G6")"></LabelSimulation>
        <LabelSimulation Label="Current Flow" Value="@Line.LabelCurrentMassFlow.ToString("G6")"></LabelSimulation>
        <LabelSimulation Label="Line Speed" Value="@Line.LabelCurrentLineSpeed.ToString("G6")"></LabelSimulation>
        @if (Line.CurrenChangeOverTime.Value > 0)
        {
            <LabelSimulation Label="Pending ChangeOver Time" Value="@Line.CurrenChangeOverTime.ToString()"></LabelSimulation>
           

        }
        else
        {

            <LabelSimulation Label="Time to Change SKU" Value="@Line.TimeToChangeSKU.ToString()"></LabelSimulation>
         
        }
        <MudSpacer></MudSpacer>
        <LabelSimulation Label="Next SKU" Value="@Line.NextSKUName"></LabelSimulation>
        <LabelSimulation Label="Mass Planned" Value="@Line.NextSKUPlannedMassSKU.ToString()"></LabelSimulation>
        <LabelSimulation Label="Cases Planned" Value="@Line.NextSKUCases.ToString()"></LabelSimulation>

   
    </Content>
</TemplateCard>



@code {

    [Parameter]

    public BaseLine Line { get; set; } = null!;

}
