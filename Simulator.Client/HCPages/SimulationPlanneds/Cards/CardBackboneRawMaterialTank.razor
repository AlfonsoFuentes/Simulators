@using Simulator.Shared.Simulations.Mixers
@using Simulator.Shared.Simulations.Tanks


<CardTank Tank="@Tank">
    <States>
        <LabelSimulation Label="Produced Batchs" Value="@Tank.BatchsProduced.ToString()"></LabelSimulation>
        
        <TemplateCard Title="Manufacturers Attached">
            <Content>
                @foreach (BaseMixer row in Tank.ManufacturingEquipments)
            {

                <CardMixerDataForTanks Mixer="@row"></CardMixerDataForTanks>
               
            }
            </Content>
        </TemplateCard>
          
            

    


    </States>
</CardTank>


@code {

    [Parameter]

    public BackBoneRawMaterialTank Tank { get; set; } = null!;


}
