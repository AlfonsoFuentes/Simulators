@using Simulator.Shared.Simulations.Mixers
@using Simulator.Shared.Simulations.Mixers.States.MixerCalculations.MixerStates
<LabelSimulation Label="Producing to" Value="@Mixer.ProducingToName"></LabelSimulation>
<LabelSimulation Label="Material" Value="@Mixer.MaterialName"></LabelSimulation>
<LabelSimulation Label="Mixer State" Value="@Mixer.LabelMixerState"></LabelSimulation>
<LabelSimulation Label="Current batch time" Value="@Mixer.CurrentTime.ToString("G6")"></LabelSimulation>
<LabelSimulation Label="Current Level" Value="@Mixer.CurrentLevel.ToString("G6")"></LabelSimulation>
<LabelSimulation Label="Init Batch" Value="@Mixer.InitBatchDate.ToString()"></LabelSimulation>
@if (Mixer.MixerState is MixerStateBatching)
{
    <LabelSimulation Value="@Mixer.MixerStepState.LabelStepStateSuperior"></LabelSimulation>
    <LabelSimulation Value="@Mixer.MixerStepState.LabelStepStateInferior"></LabelSimulation>
    
}
else if (Mixer.MixerState is MixerStateTransfering)
{
    <LabelSimulation Label="End Batch" Value="@Mixer.EndBatchDate.ToString()"></LabelSimulation>
    <LabelSimulation Label="Init Transfer" Value="@Mixer.InitBatchTransferDate.ToString()"></LabelSimulation>
   
}


@code {

    [Parameter]

    public BaseMixer Mixer { get; set; } = null!;

}
