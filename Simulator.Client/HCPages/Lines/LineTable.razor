@using Simulator.Shared.Models.HCs.Lines




<TableTemplate TValue="LineDTO"
               AddNew="AddNew"
               @bind-NameFilter=@nameFilter
               DeleteGroup="DeleteGroup"
               Items="FilteredItems"
               @bind-SelectedItems=@SelecteItems
               TableTitle="Lines List">
    <ColumnsTemplate>
        <SelectColumn T="LineDTO" />
        <PropertyColumn Property="x => x.Name" Title="Name" TProperty="string" T="LineDTO" />
        <PropertyColumn Property="x => x.PackageType.ToString()" Title="Package Type" TProperty="string" T="LineDTO" />
        <PropertyColumn Property="x => x.TimeToReviewAU.ToString()" Title="Review AU Time" TProperty="string" T="LineDTO" />

        <TemplateColumn CellClass="d-flex justify-end" T="LineDTO">
            <CellTemplate Context="template">
                <MudStack Row=true Spacing="2">
                    <IconButton ToolTip="@($"Edit {template.Item.Name}")" Size="@Size.Small" Icon="@Icons.Material.Outlined.Edit" Variant=Variant.Outlined OnClick="@(() => Edit(template.Item))" />
                    <IconButton ToolTip="@($"Delete {template.Item.Name}")" Size="@Size.Small" Icon="@Icons.Material.Outlined.Delete" Variant=Variant.Outlined Color="Color.Surface" OnClick="@(() => Delete(template.Item))" />
                </MudStack>
            </CellTemplate>
        </TemplateColumn>

    </ColumnsTemplate>
</TableTemplate>


@code {

    [Parameter]
    public EventCallback RefreshProcessFlowDiagram { get; set; }
}
