@using Simulator.Shared.Models.HCs.Materials




<TableTemplate TValue="MaterialDTO"
               AddNew="AddNew"
               @bind-NameFilter=@nameFilter
               DeleteGroup="DeleteGroup"
               Items="FilteredItems"
               @bind-SelectedItems=@SelecteItems
               TableTitle="Materials List">
    <ColumnsTemplate>
        <SelectColumn T="MaterialDTO" />
        <PropertyColumn Property="x => x.M_Number" Title="M-Number" TProperty="string" T="MaterialDTO" />
        <PropertyColumn Property="x => x.SAPName" Title="SAP Name" TProperty="string" T="MaterialDTO" />
        <PropertyColumn Property="x => x.CommonName" Title="Common Name" TProperty="string" T="MaterialDTO" />
        <PropertyColumn Property="x => x.SumOfPercentage.ToString()" Title="Sum Percentage" TProperty="string" T="MaterialDTO" />
        <PropertyColumn Property="x => x.ProductCategory.ToString()" Title="Category" TProperty="string" T="MaterialDTO" Groupable="true" Filterable="true" />
        
        <PropertyColumn Property="x => x.MaterialType.ToString()" Title="Type" TProperty="string" T="MaterialDTO" Groupable="true" Filterable="true" />
        <PropertyColumn Property="x => x.PhysicalState.ToString()" Title="Physical state" TProperty="string" T="MaterialDTO" Groupable="true" Filterable="true" />
        <TemplateColumn CellClass="d-flex justify-end" T="MaterialDTO">
            <CellTemplate Context="template">
                <MudStack Row=true Spacing="2">
                    <IconButton ToolTip="@($"Edit {template.Item.Name}")" Size="@Size.Small" Icon="@Icons.Material.Outlined.Edit" Variant=Variant.Outlined OnClick="@(() => Edit(template.Item))" />
                    <IconButton ToolTip="@($"Delete {template.Item.Name}")" Size="@Size.Small" Icon="@Icons.Material.Outlined.Delete" Variant=Variant.Outlined Color="Color.Surface" OnClick="@(() => Delete(template.Item))" />
                </MudStack>
            </CellTemplate>
        </TemplateColumn>

    </ColumnsTemplate>
</TableTemplate>


