<TableTemplate TValue="EquipmentPlannedDownTimeDTO"
               AddNew="AddNew"
               DisableAdd=@DisableAdd
               ShowSearch=false
             
               DeleteGroup="DeleteGroup"
               Items="@Items"
               @bind-SelectedItems=@SelecteItems
               TableTitle="@TableLegend">
    <ColumnsTemplate>
        <SelectColumn T="EquipmentPlannedDownTimeDTO" />
        <PropertyColumn Property="x => x.StartTimeString" Title="Start time" TProperty="string" T="EquipmentPlannedDownTimeDTO" />
        <PropertyColumn Property="x => x.EndTimeString" Title="End time" TProperty="string" T="EquipmentPlannedDownTimeDTO" />
        <PropertyColumn Property="x => x.SpanTime.ToString()" Title="Span" TProperty="string" T="EquipmentPlannedDownTimeDTO" />
        
        <TemplateColumn CellClass="d-flex justify-end" T="EquipmentPlannedDownTimeDTO">
            <CellTemplate Context="template">
                <MudStack Row=true Spacing="2">
                    <IconButton ToolTip="@($"Edit {template.Item.StartTimeString}")" Size="@Size.Small" Icon="@Icons.Material.Outlined.Edit" Variant=Variant.Outlined OnClick="@(() => Edit(template.Item))" />
                    <IconButton ToolTip="@($"Delete {template.Item.StartTimeString}")" Size="@Size.Small" Icon="@Icons.Material.Outlined.Delete" Variant=Variant.Outlined Color="Color.Surface" OnClick="@(() => Delete(template.Item))" />
                </MudStack>
            </CellTemplate>
        </TemplateColumn>

    </ColumnsTemplate>
</TableTemplate>

