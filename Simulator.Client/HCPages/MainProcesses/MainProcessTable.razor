@using Simulator.Client.HCPages.NewProcessSimulation
@using Simulator.Shared.Models.HCs.MainProcesss





<TableTemplate TValue="MainProcessDTO"
               AddNew="AddNew"
               @bind-NameFilter=@nameFilter
               DeleteGroup="DeleteGroup"
               Items="FilteredItems"
               @bind-SelectedItems=@SelecteItems
               TableTitle="MainProcesss List">
    <ChildRowContent Context="context">
        <NewMainProcessEquipmentTabs MainProcessId="@context.Item.Id"></NewMainProcessEquipmentTabs>
    </ChildRowContent>
    <ColumnsTemplate>
        <SelectColumn T="MainProcessDTO" />

        <PropertyColumn Property="x => x.Name" Title="Name" TProperty="string" T="MainProcessDTO" />

        <TemplateColumn CellClass="d-flex justify-end" T="MainProcessDTO">
            <CellTemplate Context="template">
                <MudStack Row=true Spacing="2">
                    <IconButton ToolTip="@($"Edit {template.Item.Name}")" Size="@Size.Small" Icon="@Icons.Material.Outlined.Edit" Variant=Variant.Outlined OnClick="@(() => Edit(template.Item))" />
                    <IconButton ToolTip="@($"Delete {template.Item.Name}")" Size="@Size.Small" Icon="@Icons.Material.Outlined.Delete" Variant=Variant.Outlined Color="Color.Surface" OnClick="@(() => Delete(template.Item))" />
                </MudStack>
            </CellTemplate>
        </TemplateColumn>

    </ColumnsTemplate>
</TableTemplate>


