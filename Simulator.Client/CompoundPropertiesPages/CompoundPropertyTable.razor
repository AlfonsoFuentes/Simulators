@page "/compounds"
@using Simulator.Shared.Models.CompoundProperties
<TableTemplate TValue="CompoundPropertyDTO"
               AddNew="AddNew"
               @bind-NameFilter=@nameFilter
               DeleteGroup="DeleteGroup"
               Items="FilteredItems"
               @bind-SelectedItems=@SelecteItems
               TableTitle="CompoundPropertys List">
    <ColumnsTemplate>
        <SelectColumn T="CompoundPropertyDTO" />

        <PropertyColumn Property="x => x.Name" Title="Name" TProperty="string" T="CompoundPropertyDTO" />
        <PropertyColumn Property="x => x.Formula" Title="Formula" TProperty="string" T="CompoundPropertyDTO" />
        <PropertyColumn Property="x => x.StructuralFormula" Title="Structural Formula" TProperty="string" T="CompoundPropertyDTO"  />
        <PropertyColumn Property="x => x.MolecularWeight" Title="PM" TProperty="double" T="CompoundPropertyDTO" />
        <PropertyColumn Property="x => x.MainFamily" Title="Main Family" TProperty="string" T="CompoundPropertyDTO" />
        <PropertyColumn Property="x => x.SecondaryFamily" Title="Secondary Family" TProperty="string" T="CompoundPropertyDTO" />
       
        <TemplateColumn CellClass="d-flex justify-end" T="CompoundPropertyDTO">
            <CellTemplate Context="template">
                <MudStack Row=true Spacing="2">
                    <IconButton ToolTip="@($"Edit {template.Item.Name}")" Size="@Size.Small" Icon="@Icons.Material.Outlined.Edit" Variant=Variant.Outlined OnClick="@(() => Edit(template.Item))" />
                    <IconButton ToolTip="@($"Delete {template.Item.Name}")" Size="@Size.Small" Icon="@Icons.Material.Outlined.Delete" Variant=Variant.Outlined Color="Color.Surface" OnClick="@(() => Delete(template.Item))" />
                </MudStack>
            </CellTemplate>
        </TemplateColumn>

    </ColumnsTemplate>
</TableTemplate>

